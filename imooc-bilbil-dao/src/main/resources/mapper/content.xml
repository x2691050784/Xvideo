<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.bilbil.dao.ContentDao">

    <insert id="addContent" parameterType="com.imooc.bilbil.domain.Content"
            useGeneratedKeys="true" keyProperty="id">
        insert into
            t_content
            (
             contentDetail,
             createTime
            )values
             (
              #{contentDetail,typeHandler=com.imooc.bilbil.service.handler.JsonObjectTypeHandler},
              now()
             )
    </insert>

</mapper>